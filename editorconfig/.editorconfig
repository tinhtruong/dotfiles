; This file is for unifying the coding style for different editors and IDEs.
; More information at http://editorconfig.org

root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{tf,hcl}]
indent_size = 2

[*.bat]
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false

[*.tsv]
indent_style = tab