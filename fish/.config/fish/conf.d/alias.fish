# Set up command aliases

# https://github.com/ogham/exa
alias ls "exa"
alias tree "exa --tree"

# https://github.com/sharkdp/bat
alias cat "bat"

# Git aliases
alias gci "git commit -m"
alias gca "git commit -am"
alias gsh "git push"
alias gll "git pull"
alias gst "git status"
alias gmg "git merge"
alias grb "git rebase"
alias gcl "git clean -fd"
alias grs "git reset"
alias glg "git log"